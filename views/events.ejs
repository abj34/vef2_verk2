<section class="events">
  <h2 class="events__title">Viðburðir á næstunni</h2>
  <ul class="events__list">
    <% for (const event of events) { %>
      <li class="events__event">
        <a href="/<%= event.slug %>" class="events__eventLink"><%= event.name %></a>
        <p class="events__eventDescription"><%= event.description %></p>
        <% if ( event.owner == userInfo.id ) { %>
          <p><a href="/admin/<%= event.slug %>" class="events__eventEdit">Uppfæra viðburð</a>
        <% } %>
      </li>
    <% } %>
  </ul>

  <% if (userInfo.username === null) { %>
    <form>
      <button class="button_smaller"><a class="button_a" href="/previouspage">Fyrri Síða</a></button>
      <button class="button_smaller"><a class="button_a" href="/nextpage">Næsta Síða</a></button>
    </form>
  <% } %>
  <% if (userInfo.username !== null) { %>
  <form>
      <button class="button_smaller"><a class="button_a" href="/admin/previouspage">Fyrri Síða</a></button>
      <button class="button_smaller"><a class="button_a" href="/admin/nextpage">Næsta Síða</a></button>
    </form>
  <% } %>

</section>
